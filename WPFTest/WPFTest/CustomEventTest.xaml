<Window x:Class="WPFTest.CustomEventTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        x:Name="window1"
        Title="TimeButtonTest" Height="450" Width="800" local:TimeButton.ReportTime="TimeButton_ReportTime">
    <Grid x:Name="grid_root" local:TimeButton.ReportTime="TimeButton_ReportTime">
        <Grid x:Name="grid1" local:TimeButton.ReportTime="TimeButton_ReportTime">
            <Grid x:Name="grid2" local:TimeButton.ReportTime="TimeButton_ReportTime">
                <StackPanel x:Name="stackpanel1" local:TimeButton.ReportTime="TimeButton_ReportTime">
                    <ListBox x:Name="listBox" MinHeight="80"/>
                    <local:TimeButton x:Name="timeButton" Width="80" Height="80"
                        Content="clock" local:TimeButton.ReportTime="TimeButton_ReportTime"/>
                    <Button x:Name="clr" Content="clear" Click="Clr_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
