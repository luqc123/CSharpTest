<Window x:Class="WPFTest.RoutedEventTest1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="RoutedEventTest1" Height="450" Width="800" Background="OrangeRed"
        MouseRightButtonDown="AboutDialog_MouseRightButtonDown">
    <StackPanel>
        <Label FontWeight="Bold" FontSize="20" Foreground="White">
            RoutedEvent Test.
        </Label>
        <Label>2013 Publishing</Label>
        <Label>Installed Chapters</Label>
        <ListBox SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem>Chapter 1</ListBoxItem>
            <ListBoxItem>Chapter 2</ListBoxItem>
        </ListBox>
        <StackPanel ButtonBase.Click="StackPanel_Click" Orientation="Horizontal"  HorizontalAlignment="Center">
        
            <Button MinWidth="70" MinHeight="50" Margin="10">Help</Button>
            <Button MinWidth="70" MinHeight="50" Margin="10">OK</Button>
        </StackPanel>
        <StatusBar HorizontalAlignment="Center">routedevnet test.</StatusBar>
    </StackPanel>
</Window>
